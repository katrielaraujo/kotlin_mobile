<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListagemProdutoActivity">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="56dp"> <!-- Deixa espaço abaixo do cabeçalho -->

        <!-- Título da página -->
        <TextView
            android:id="@+id/tvListaProdutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTA DE PRODUTOS"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Card do item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/tvItem1Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item 1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvItem1Descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do item 1"
                android:textSize="14sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Card do item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/tvItem2Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item 2"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvItem2Descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do item 2"
                android:textSize="14sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Card do item 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/tvItem3Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item 3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvItem3Descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do item 3"
                android:textSize="14sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Botão Voltar -->
        <Button
            android:id="@+id/btnCentralizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>